@model Employee

<h1 class="alert alert-warning text-center">Edit Employee</h1>
<form class="col-4" method="post" asp-controller="emplyees" asp-action="EditCurrent">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <div>
        <label asp-for="FullName">@Html.DisplayNameFor(e => e.FullName)</label>
        <input type="text" asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Position">@Html.DisplayNameFor(e => e.Position)</label>
        <input type="text" asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Salary">@Html.DisplayNameFor(e => e.Salary)</label>
        <input type="text" asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Appraisal">@Html.DisplayNameFor(e => e.Appraisal)</label>
        <input type="number" asp-for="Appraisal" class="form-control" />
        <span asp-validation-for="Appraisal" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="birthdate">@Html.DisplayNameFor(e => e.birthdate)</label>
        <input type="date" asp-for="birthdate" class="form-control" />
        <span asp-validation-for="birthdate" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="joinDateTime">@Html.DisplayNameFor(e => e.joinDateTime)</label>
        <input type="datetime-local" asp-for="joinDateTime" class="form-control" />
        <span asp-validation-for="joinDateTime" class="text-danger"></span>

    </div>

    <div class="form-check">
        <label asp-for="IsActive" class="form-check-label">@Html.DisplayNameFor(e => e.IsActive)</label>
        <input type="checkbox" asp-for="IsActive" class="" class="form-check-input" />


    </div>
    <div class="col-4">
        <label asp-for="DepartmentId">@Html.DisplayNameFor(e => e.DepartmentId)</label>

        <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.AllDepartments,"Id","Description"))" class="form-control">
        
        </select>

        <span asp-validation-for="DepartmentId" class="text-danger"></span>

    </div>
    <div class="mt-3"><button type="submit" class="btn btn-success"> Edit</button></div>

</form>
<a asp-controller="emplyees" asp-action="GetIndexView">Back to list</a>